<div class="panel panel-default">
  <!-- BUSCADOR -->
  <div class="busqueda">
    <form>
      <div class="field" align="rigth">
        <input type="text" name="name" id="search" placeholder="Nombre" value="<%= params[:name] %>" style="border-radius: 5px;">
        <input type="text" name="document_number" id="search" placeholder="Número de documento" value="<%= params[:document_number] %>" style="border-radius: 5px;">
        <input class="btn btn-default btn-sm" type="submit" value="Buscar">
      </div>
    </form>
  </div>
  <div class="panel-heading">
    Propietarios
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Número de documento</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.document_number %></td>
        <td><%= link_to 'Vehículos', user_vehicles_path(user) %></td>
        <td><%= link_to 'Detalle', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Nuevo Propietario", new_user_path(), class: "btn btn-primary" %>
